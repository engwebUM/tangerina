<h2 class="text-center">Created Articles</h2>
<% if versions.present? %>
  <table id="versions" class="display">
    <thead>
      <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Theme</th>
        <th>Created</th>
        <th>Author</th>
      </tr>
    </thead>

    <tbody>
      <% versions.reverse.each do |v| %>
      <tr>
        <td><%= link_to v.id, { action: 'show', id: v.id } %></td>
        <td><%= v.title %></td>
        <td><%= v.theme.name %></td>
        <td><%= v.created_at.strftime("%b %e") %><br><%= v.created_at.strftime("%l:%M %p") %></td>
        <td><%= User.find(v.user_id).username %></td>
       </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No records</p>
<% end %>
