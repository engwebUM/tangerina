<h2 class="text-center">Updated Articles</h2>
<% if versions.present? %>
  <table id="versions" class="display">
    <thead>
      <tr>
        <th>Article ID</th>
        <th>Title</th>
        <th>Theme</th>
        <th>Created</th>
        <th>Updated</th>
        <th>Author</th>
      </tr>
    </thead>

    <tbody>
      <% versions.reverse.each do |v| %>
      <tr>
          <td><%= link_to v.article_id, { action: 'show', id: v.id } %></td>
          <td><%= link_to v.title, { action: 'show', id: v.id } %></td>
          <td><%= v.theme.name %></td>
          <td><%= v.created_at.strftime("%b %e") %><br><%= v.created_at.strftime("%l:%M %p") %></td>
          <td><%= v.updated_at.strftime("%b %e") %><br><%= v.updated_at.strftime("%l:%M %p") %></td>
          <td><%= v.user.username  %></td>
       </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No records</p>
<% end %>
