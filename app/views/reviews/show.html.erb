<div class="row">
    <div class="box">

      <div class="theme-icon">
        <img src='/assets/<%= @article.theme.name %>.png' alt="">
      </div>
      <div class="pull-right">
        <h5><%= @article.versions.last.event %>
      </div>
        <div class="col-lg-12 header">
            <hr class="hr-post">
            <h2 class="intro-text text-center"><%= @article.title %></h2>
            <hr class="hr-post">
            <div class="span8">
              <p>
                <i class="icon-user"></i><span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                <a href="#"><%= @article.user.username %></a>
                | <i class="icon-calendar"></i> <span class="glyphicon glyphicon-calendar" aria-hidden="true"></span>
                <%= @article.created_at.strftime("%d %b. %Y") %>
                | <i class="icon-file"></i>
                <span class="glyphicon glyphicon-file" aria-hidden="true"></span>
                 1 Files
              </p>
              <p>
                <%= raw @article.tag_list.map { |t| link_to content_tag(:span, t, { class: "label label-info"}), tag_path(t) }.join(', ') %>
              </p>
            </div>
        </div>
        <div class="col-lg-12">
          <h5>Description:</h5>
          <p><%= @article.description %></p>
          <hr class="hr-comments">
            <h5>Abstract:</h5>
            <p><%= simple_format @article.abstract %></p>
            <br>
            <div class="text-center">
              <h4><strong>Files </strong>
                <%= link_to @article.file.url do %>
                  <%= image_tag 'pdf.png' %>
                <% end %>
            </h4>
            </div>
            <hr class="hr-comments">
            <p class="text-center">

              <%= link_to controller: "reviews", action: "accept" do %>
                <span class="glyphicon glyphicon-ok"></span>
                Accept
              <% end %>

              <%= link_to  controller: "reviews", action: 'reject' do %>
                <span class="glyphicon glyphicon-remove"></span>
                Reject
              <% end %>

            </p>
        </div>


    </div>
</div>
