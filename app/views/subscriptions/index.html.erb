<div class="container-body">
  <div class="container">
    <div class="row">
          <div  class='row'>
            <div class="content bg-base section">
              <div class="page-header">
                <div class="row">
              <div class='col-lg-12'>
                <h2>Subscriptions</h2>
                <% if @subscriptions.present? %>
                  <table id="versions" class="display">
                    <thead>
                      <tr>
                        <th>Subject</th>
                        <th>Theme</th>
                        <th>Notifications</th>
                        <th>Destroy</th>
                      </tr>
                    </thead>

                		<tbody>
                			<% @subscriptions.each do |v| %>
                				<tr>
                					<td><%= v.subject %></td>
                					<td><%= Theme.find(v.theme_id).name %></td>
                					<td>
                						<% if v.notify? %>
                						  Active
                            <% else %>
                              Inactive
                             <% end %>
                					</td>
                          <td><%= link_to 'Destroy', v, method: :delete %></td>
                				</tr>
                			<% end %>
                		</tbody>
                  </table>
                <% else %>
                  <p>No records</p>
                <% end %>
                <br>
                  <div class="text-center">
                  <%= link_to 'New', new_subscription_path, {class: "btn btn-warning btn-lg"}  %>
                </div>
              </div>
            </div>
</div>
  <p>&nbsp;</p>
  <%= render partial: 'articles/article', object: @articles %>
  <% if @articles.count==0 %>
    <h1 class="text-center">NO ARTICLES</h1>
    <p class='text-center'><img class="" src="/assets/emotion.png" ></p>
  <% end %>
</div>

        </div>
      </div>
  </div>
</div>
