<% @articles.each do |article| %>

  <div class="row">
    <div class="box">

      <div class="theme-icon">
        <img src='/assets/<%= article.theme.name %>.png' alt="">
      </div>
      <div class="col-lg-12 header">
        <hr class="hr-post">
        <h2 class="intro-text text-center"><%= link_to article.title, action: 'show', id: article.id  %></h2>
        <hr class="hr-post">
        <div class="span8">
          <p class="link_recommend">
            <i class="icon-user"></i><span class="glyphicon glyphicon-user" aria-hidden="true"></span>
            <a href="#"><%= article.user.username %></a>
            | <i class="icon-calendar"></i> <span class="glyphicon glyphicon-calendar" aria-hidden="true"></span>
              <%= article.updated_at %>
            | <i class="icon-comment"></i><span class="glyphicon glyphicon-comment" aria-hidden="true"></span>
              Comments
            | <i class="icon-file"></i>
            <span class="glyphicon glyphicon-file" aria-hidden="true"></span>
             1 Files
            

          </p>
          <p>
            <%= raw article.tag_list.map { |t| link_to content_tag(:span, t, { class: "label label-info"}), tag_path(t) }.join(' ') %>
          </p>
        </div>
        <hr class="hr-comments">
        <p><%= simple_format article.description %></p>
      </div>


    </div>
  </div>
<% end %>
