

        <div class="row">
            <div class="box">


              <div class="theme-icon">
                <img  src='/assets/<%= @article.theme.name %>.png' alt="">
              </div>
                <div class="col-lg-12 header">
                    <hr class="hr-post">
                    <h2 class="intro-text text-center"><%= @article.title %></h2>
                    <hr class="hr-post">
                    <div class="span8">
                      <p>
                        <i class="icon-user"></i><span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                        <a href="#"><%= @article.user.email %></a>
                        | <i class="icon-calendar"></i> <span class="glyphicon glyphicon-calendar" aria-hidden="true"></span>
                        <%= @article.created_at.strftime("%d %b. %Y") %>
                        | <i class="icon-comment"></i><span class="glyphicon glyphicon-comment" aria-hidden="true"></span>
                        <%= @article.comments.count %> Comments
                        | <i class="icon-file"></i>
                        <span class="glyphicon glyphicon-file" aria-hidden="true"></span>
                         1 Files
                      </p>
                      <p>
                        <%= raw @article.tag_list.map { |t| link_to content_tag(:span, t, { class: "label label-info"}), tag_path(t) }.join(' ') %>
                      </p>
                    </div>
                </div>
                <div class="col-lg-12">

                    <p><%= simple_format @article.abstract %></p>
                    <br>
                    <div class="text-center">
                      <h4><strong>Files </strong>
                        <%= link_to @article.file.url do %>
                          <%= image_tag 'pdf.png' %>
                        <% end %>
                    </h4>
                    </div>
                    <hr class="hr-comments">

                    <% if current_user.id==@article.user_id %>
                    <br>
                    <p class="text-center">

                      <%= link_to edit_article_path(@article), {class: "btn btn-default btn-lg"} do %>
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        Edit
                      <% end %>

                      <%= link_to @article, {class: "btn btn-default btn-lg"}, method: :delete,
                        data: { confirm: 'Are you sure?' } do %>
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                        Destroy
                      <% end %>
                    </p>
                    <% end %>
                    <br>
                    <div class="well">
                      <h4>Leave a Comment:</h4>
                      <%= form_for([@article, Comment.new], remote: true) do |f| %>

                        <div class="form-group">
                            <%= f.text_area :body, class: "form-control", rows: 3 %>
                        </div>
                        <%= f.hidden_field :user_id, value: current_user.id %>
                        <%= f.submit class: "btn btn-primary" %>
                      <% end %>

                      <hr class="hr-comments">
                      <div id="comments">
                        <%= render :partial => @article.comments.reverse %>
                      </div>

                    </div>
                </div>
            </div>
        </div>
